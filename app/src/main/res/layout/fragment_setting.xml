<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragment_setting">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_setting_sv"
            android:layout_margin="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:padding="10dp"
                    android:text="Change Password"
                    android:layout_alignParentTop="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="#d3e9d9"
                    android:padding="10dp"
                    android:ems="10"
                    android:id="@+id/useroldpw"
                    android:hint="Old Password"
                    android:textSize="18sp"
                    android:layout_marginTop="37dp"
                    android:textCursorDrawable="@drawable/custom_cursor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d3e9d9"
                    android:padding="10dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:id="@+id/usernewpw"
                    android:hint="New Password"
                    android:textSize="18sp"
                    android:textCursorDrawable="@drawable/custom_cursor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d3e9d9"
                    android:padding="10dp"
                    android:id="@+id/usernewpwre"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="Repeat New Password"
                    android:textSize="18sp"
                    android:textCursorDrawable="@drawable/custom_cursor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Password"
                    android:textSize="16sp"
                    android:id="@+id/showHidePassword"
                    android:checked="false"
                    android:layout_marginTop="16dp"
                    android:buttonTint="@color/colorPrimary"/>
                <Button
                    android:id="@+id/changepw"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffffff"
                    android:text="Change"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:background="@drawable/bookbutton"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </ScrollView>
</RelativeLayout>

