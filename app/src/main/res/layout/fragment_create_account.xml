<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Fragment.createAccount"
    android:id="@+id/fragment_create_account">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/createaccount"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/EditTextLayout"
        android:layout_alignStart="@+id/EditTextLayout" />

    <LinearLayout
        android:id="@+id/EditTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="37dp"
        android:background="@color/edittextbackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/textView22"
        android:paddingBottom="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="@string/name"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/collaborator"
            android:textCursorDrawable="@drawable/custom_cursor"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:hint="This is the address where ur food will be delivered."
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/marker3"
            android:textCursorDrawable="@drawable/custom_cursor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choosepassword"
            android:hint="@string/choosepassword"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/password"
            android:textCursorDrawable="@drawable/custom_cursor"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createaccount"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/buttonshape"
        android:id="@+id/createb"
        android:layout_below="@+id/EditTextLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/createb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alreadyhaveaaccount"
            android:id="@+id/already_confText"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/already_conf"
            android:textSize="18sp"/>
    </LinearLayout>


</RelativeLayout>
