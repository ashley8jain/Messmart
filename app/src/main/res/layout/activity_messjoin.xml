<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Fragment.LoginActivity"
    android:background="#ffffff"
    android:id="@+id/activity_messjoin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:id="@+id/activity_messjoin_sv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/activity_messjoin_ll">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d3e9d9"
            android:padding="10dp"
            android:hint="Name"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/EditTextName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="Mobile Number"

            android:background="#d3e9d9"
            android:padding="10dp"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/EditTextMobile"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d3e9d9"
            android:textCursorDrawable="@drawable/color_cursor"
            android:padding="10dp"
            android:hint="Email Id"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/EditTextEmailid"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="5dp"
            android:background="#d3e9d9"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/EditTextAddress"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose a Password"
            android:textCursorDrawable="@drawable/color_cursor"
            android:password="true"
            android:background="#d3e9d9"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/EditTextPassword"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anything else ?"
            android:textCursorDrawable="@drawable/color_cursor"
            android:minLines="3"
            android:background="#d3e9d9"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/EditTextElse"/>


    <Button
        android:layout_width="match_parent"
        android:background="@drawable/buttonshape"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonSubmit"
        android:text="Submit"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="70dp"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>


