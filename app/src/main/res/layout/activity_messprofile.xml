<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#f1e3e3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="20dp"
                        android:id="@+id/messProfile"
                        android:src="@drawable/messmart_logo"
                        android:gravity="center_horizontal"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_sub_view"
                        card_view:cardCornerRadius="20dp"
                        android:layout_width="match_parent"
                        card_view:cardElevation="2dp"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mess_name"
                            android:text="Name"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="About Mess"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mess_aboutme"
                        android:padding="5dp"
                        android:text="--"/>
                        </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_sub_view2"
                    android:layout_width="match_parent"
                    card_view:cardElevation="2dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Address"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mess_address"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Lunch Timing"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mess_lunchtime"
                            android:text="--"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Dinner Timing"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:id="@+id/mess_dinnertime"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                        </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/dishlist"
                    android:padding="10dp"
                    android:text="Dishes for this week"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="10000dp"
                    android:id="@+id/fraglist">
                </FrameLayout>

                </LinearLayout>


        </ScrollView>

    </RelativeLayout>
