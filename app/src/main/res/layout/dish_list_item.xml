<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/messimg"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/food3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="dish name"
            android:layout_below="@+id/messimg"
            android:textAlignment="textStart"
            android:gravity="start"
            android:padding="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messmakername"
            android:text="mess name"
            android:layout_below="@+id/title"
            android:textAlignment="textStart"
            android:gravity="start"
            android:padding="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#039be5"
            android:textSize="13sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textSize="30dp"
            android:id="@+id/price"
            android:drawableLeft="@drawable/inrup"
            android:layout_below="@+id/messmakername"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:padding="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgveg"
            android:src="@drawable/veg"
            android:paddingRight="10dp"
            android:layout_alignRight="@+id/messmakername"
            android:layout_below="@+id/messimg"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/when"
            android:padding="10dp"
            android:text="deswdsw"
            android:layout_below="@id/price"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"
            android:text="Book"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/bookbutton"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@+id/when"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newnkllll
            lllllllllllllllllllllllllllllllllllllllllllllllllllllkllllllllllllll Text"
            android:padding="10dp"
            android:textStyle="italic"
            android:layout_below="@+id/bookbutton"
            android:id="@+id/description"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>