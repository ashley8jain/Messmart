<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Fragment.LoginActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Student Signup"
        android:id="@+id/textView21"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView21"
        android:id="@+id/mob"
        android:hint="Phone"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:drawablePadding="10dp"
        android:drawableLeft="@android:drawable/sym_action_call"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="RE-SEND"
        android:id="@+id/resend"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:drawableRight="@android:drawable/sym_call_incoming"
        android:layout_below="@+id/mob"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_below="@id/resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmotppp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Confirm OTP"
        android:drawablePadding="10dp"
        android:drawableLeft="@android:drawable/ic_lock_lock" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="CONFIRM"
        android:id="@+id/confirm"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_below="@+id/confirmotppp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginTop="20dp"
        android:id="@+id/already"
        android:layout_below="@+id/confirm"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
