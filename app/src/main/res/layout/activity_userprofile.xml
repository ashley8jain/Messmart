<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightpinkbackground">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/how"
                    android:gravity="center_horizontal">
                    <com.ashleyjain.messmart.function.RoundedImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:id="@+id/profImg"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/messmart_logo"
                        android:gravity="center_horizontal"/>

                    <TextView android:id="@+id/showdialogedit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/linktextcolor"
                        android:text="@string/editprofile"
                        android:paddingRight="20dp"
                        android:gravity="end"/>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card_sub_view"
                        card_view:cardCornerRadius="30dp"
                        android:layout_width="match_parent"
                        card_view:cardElevation="2dp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userinputname1"
                            android:text="@string/name"
                            android:padding="10dp"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/userinputwallet1"
                                android:text="@string/cost"
                                android:padding="10dp"
                                android:drawableLeft="@drawable/inrup"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add"
                                android:id="@+id/add"
                                android:textColor="#039be5"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/useraddress"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userinputaddress1"
                            android:padding="10dp" />
                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
        </ScrollView>
</RelativeLayout>
