<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightpinkbackground">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pro"
                        android:orientation="horizontal"
                        android:padding="30dp"
                        android:background="@color/primary">
                        <com.ashleyjain.messmart.function.RoundedImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:id="@+id/profImg"
                            android:src="@drawable/messmart_logo"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:orientation="vertical">
                            <com.ashleyjain.messmart.function.CustomText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/userinputname1"
                                android:textColor="#ffffff"
                                android:text="@string/name"
                                android:textSize="28sp"
                                android:textStyle="bold"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:weightSum="1">
                                <com.ashleyjain.messmart.function.CustomText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/userinputwallet1"
                                    android:text="@string/cost"
                                    android:textColor="#aaffffff"
                                    android:textSize="15sp"
                                    android:drawablePadding="5dp"
                                    android:textStyle="bold"
                                    android:drawableLeft="@drawable/rupee"
                                    android:drawableTint="#aaffffff"
                                    android:gravity="center_vertical" />
                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="27dp"
                                    android:layout_height="31dp"
                                    card_view:fabSize="mini"
                                    android:src="@drawable/plus"
                                    card_view:backgroundTint="#f2d928"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/add"
                                    android:layout_weight="0.16" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/aboutprofile"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/showdialogedit"
        card_view:backgroundTint="#cd2752"
        android:clickable="true"
        android:src="@drawable/pencil"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/pro"
        app:layout_anchorGravity="bottom|right|end"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profpic"
        android:layout_width="wrap_content"
        card_view:backgroundTint="#4432f0"
        android:clickable="true"
        android:layout_margin="16dp"
        android:src="@drawable/camera"
        android:layout_height="wrap_content"
        card_view:fabSize="mini"
        app:layout_anchor="@id/profImg"
        app:layout_anchorGravity="center_horizontal|bottom"/>
</android.support.design.widget.CoordinatorLayout>
